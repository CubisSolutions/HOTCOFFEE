<?xml version="1.0" encoding="UTF-8"?>
<sdkExtension
	id="com.sap.sample.scngauge"
	title="Cubis Gauge"
	version="16.1"
	vendor="Cubis Solutions"  
	xmlns="http://www.sap.com/bi/zen/sdk"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sap.com/bi/zen/sdk http://www.sap.com/bi/zen/sdk ">
	  <license>license</license>
  
  <group id="CubisComponents" title="Cubis Custom Components" />
  
  <component
      databound="false"
      group="CubisComponents"
      handlerType="div"
      icon="res/gauge.png"
      id="gauge"
      propertySheetPath="res/additional_properties_sheet/additional_properties_sheet.html"
      title="Gauge"
      tooltip="Cubis Gauge"
      visible="true"
      >
      
      <stdInclude kind="d3"/>
		<jsInclude>res/js/component.js</jsInclude>
		<cssInclude>res/css/component.css</cssInclude>
      
<!-- 	<requireJs modes="commons m">res/js/component</requireJs> -->
    
    <property
		id="startAngleDeg"
		title="Start Angle"
		type="float"/>
  <property
        id="endAngleDeg"
        title="End Angle"
        type="float"/>
    <property
        id="innerRad"
        title="Inner Radius"
        type="float"/>
    <property
        id="outerRad"
        title="Outer Radius"
        type="float"
        visible="false"/>
    <property
        id="offsetLeft"
        title="Centerpoint Offset X-Axis"
        type="int"
        visible="false"/>
    <property
        id="offsetDown"
        title="Centerpoint Offset Y-Axis"
        type="int"
        visible="false"/>
    <property
        id="paddingTop"
        title="Top Padding"
        type="int"/>
    <property
        id="paddingBottom"
        title="Bottom Padding"
        type="int"/>
    <property
        id="paddingLeft"
        title="Left Padding"
        type="int"/>
    <property
        id="paddingRight"
        title="Right Padding"
        type="int"/>
    <property
        id="colorCode"
        title="Color"
        type="Color"/>
    
    <initialization>
		<defaultValue property="WIDTH">100</defaultValue>
		<defaultValue property="HEIGHT">100</defaultValue>
		<defaultValue property="startAngleDeg">-120.0</defaultValue>
		<defaultValue property="endAngleDeg">90.0</defaultValue>
		<defaultValue property="colorCode">green</defaultValue>
		<defaultValue property="innerRad">0.0</defaultValue>
    </initialization>
  </component>

<component
      databound="true"
      group="CubisComponents"
      handlerType="div"
      icon="res/progressindicator.png"
      id="textFiller"
      propertySheetPath="res/additional_properties_sheet/aps_textfiller.html"
      title="Text filler"
      tooltip="Cubis Text filler"
      visible="true"
      >
      
      <stdInclude kind="d3"/>
<jsInclude>res/js/component.js</jsInclude>
<cssInclude>res/css/component.css</cssInclude>
<!-- 	<requireJs modes="commons m">res/js/component</requireJs> -->
    
    <property
		id="text"
		title="Text"
		type="Text"
		visible="true"/>
	
	<property
        id="textcolorCode"
        title="Text Color"
        type="Color"/>
    
    <property
        id="progressColorCode"
        title="Progress Color"
        type="Color"/>
	
	<property
    	id="percent"
    	title = "percentage"
    	type="ResultCell"
    	group="DataBinding">
    	<option name="includeFormattedData" value="true"/>
		<option name="includeData" value="true"/>
	</property>
	
	<initialization>
		<defaultValue property="WIDTH">75</defaultValue>
		<defaultValue property="HEIGHT">55</defaultValue>
		<defaultValue property="Text">Cubis</defaultValue>
		<defaultValue property="textcolorCode">black</defaultValue>
		<defaultValue property="progressColorCode">orange</defaultValue>
		<defaultValue property="percent">50</defaultValue>
	</initialization>
</component>

<component
      databound="false"
      group="CubisComponents"
      handlerType="div"
      icon="res/gauge.png"
      id="logoFiller"
      propertySheetPath="res/additional_properties_sheet/aps_logofiller.html"
      title="Logo filler"
      tooltip="Cubis Logo filler"
      visible="true">
      
    <stdInclude kind="d3"/>
    <jsInclude>res/js/component.js</jsInclude>
    <cssInclude>res/css/component.css</cssInclude>
	
	<property
		id="WIDTH"
		title="Width"
		type="int"/>
	<property
		id="HEIGHT"
		title="Height"
		type="int"/>
		
	<initialization>
		<defaultValue property="WIDTH">100</defaultValue>
		<defaultValue property="HEIGHT">100</defaultValue>
	</initialization>
</component>

<component
      databound="true"
      group="CubisComponents"
      handlerType="div"
      icon="res/progressindicator.png"
      id="textBlockFiller"
      propertySheetPath="res/additional_properties_sheet/aps_textfiller.html"
      title="Bloctext filler"
      tooltip="Cubis Blocktext filler"
      visible="true"
      >
      
      <stdInclude kind="d3"/>
<jsInclude>res/js/component.js</jsInclude>
<cssInclude>res/css/component.css</cssInclude>
<!-- 	<requireJs modes="commons m">res/js/component</requireJs> -->
    
    <property
		id="text"
		title="Text"
		type="Text"
		visible="true"/>
	
	<property
        id="textcolorCode"
        title="Text Color"
        type="Color"/>
    
    <property
        id="progressColorCode"
        title="Progress Color"
        type="Color"/>
	
	<property
    	id="percentage"
    	title = "percentage"
    	type="ResultCellList"
    	group="DataBinding">
    	<option name="includeFormattedData" value="true"/>
		<option name="includeData" value="true"/>
	</property>
	
	
	<initialization>
		<defaultValue property="WIDTH">75</defaultValue>
		<defaultValue property="HEIGHT">55</defaultValue>
		<defaultValue property="Text">Cubis</defaultValue>
		<defaultValue property="textcolorCode">black</defaultValue>
		<defaultValue property="progressColorCode">orange</defaultValue>
		<defaultValue property="percentage">50</defaultValue>
	</initialization>
</component>

</sdkExtension>
