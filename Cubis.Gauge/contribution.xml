<?xml version="1.0" encoding="UTF-8"?>
<sdkExtension
	id="com.sap.sample.scngauge"
	title="Cubis Gauge"
	version="15.0"
	vendor="Cubis"  
	xmlns="http://www.sap.com/bi/zen/sdk"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sap.com/bi/zen/sdk http://www.sap.com/bi/zen/sdk ">
	  <license>license</license>
  
    	  <group
  id="GaugeLineSettings"
  title="Guide Lines"
  tooltip="Guide Line Ring and Line Settings" />
  
  
  <component
      databound="false"
      group=""
      handlerType="div"
      icon="res/gauge.png"
      id="gauge"
      propertySheetPath="res/additional_properties_sheet/additional_properties_sheet.html"
      title="Gauge"
      tooltip="Cubis Gauge"
      visible="true">
      
    <stdInclude kind="d3"/>
    <jsInclude>res/js/component.js</jsInclude>
    <cssInclude>res/css/component.css</cssInclude>
    
    <property
        id="textcolorCode"
        title="Color"
        type="Color"/>
        
    <property
		id="text"
		title="Text"
		type="Text"
		bindable="true"
		visible="true"/>
	
	<property
        id="textcolorCodeFill"
        title="Color"
        type="Color"/>
     
    <property
    	id="percentage"
    	title = "percentage"
    	type="ResultCell"
    	bindable="true">
    	<option name="includeData" value="true" /></property>
	
    
    <initialization>
		<defaultValue property="WIDTH">100</defaultValue>
		<defaultValue property="HEIGHT">100</defaultValue>
		<defaultValue property="textcolorCode">orange</defaultValue>
		<defaultValue property="textcolorCodeFill">black</defaultValue>
		<defaultValue property="percentage">10</defaultValue>
    </initialization>
    
  </component>
</sdkExtension>
