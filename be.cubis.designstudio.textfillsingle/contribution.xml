<?xml version="1.0" encoding="UTF-8"?>
<sdkExtension
	id="be.cubis.designstudio.textfillsingle"
	title="Text Filler (Single)"
	version="1.0"
	vendor="Cubis Solutions"  
	xmlns="http://www.sap.com/bi/zen/sdk"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sap.com/bi/zen/sdk http://www.sap.com/bi/zen/sdk ">
	  <license>license</license>
  
  <group id="CubisComponents" title="Cubis Components" />

<component
      databound="true"
      group="CubisComponents"
      handlerType="div"
      icon="res/progressindicator.png"
      id="textFillSingle"
      propertySheetPath="res/additional_properties_sheet/aps_textfiller.html"
      title="Text Filler (Single)"
      tooltip="Text Filler (Single)"
      visible="true"
      >
      
      <stdInclude kind="d3"/>
<jsInclude>res/js/component.js</jsInclude>
<cssInclude>res/css/component.css</cssInclude>
<!-- 	<requireJs modes="commons m">res/js/component</requireJs> -->
    
<!-- Extra properties for the APS. Hidden in settings. -->
    <property
		id="text"
		title="Text"
		type="Text"
		visible="false"/>
    <property
		id="dtype"
		title="Type"
		type="Text"
		visible="false"/>
	<property
		id="labelpos"
		title="Label position"
		type="Text"
		visible="false"/>
	<property
		id="textsize"
		title="Text size"
		type="Text"
		visible="false"/>
<!-- End of extra properties		 -->


	<property
        id="textcolorCode"
        title="Text Color"
        type="Color"/>
    
    <property
        id="progressColorCode"
        title="Progress Color"
        type="Color"/>

    <property
        id="progressFillColorCode"
        title="Progress fill Color"
        type="Color"/>
	
	<property
    	id="percentage"
    	title = "Percentage"
    	type="ResultCell"
    	group="DataBinding">
    	<option name="includeFormattedData" value="true"/>
		<option name="includeData" value="true"/>
	</property>
	
	<initialization>
		<defaultValue property="WIDTH">75</defaultValue>
		<defaultValue property="HEIGHT">50</defaultValue>
		<defaultValue property="textcolorCode">black</defaultValue>
		<defaultValue property="progressColorCode">#004080</defaultValue>
		<defaultValue property="progressFillColorCode">#C0C0C0</defaultValue>
		<defaultValue property="text">Cubis</defaultValue>
		<defaultValue property="dtype">manual</defaultValue>
		<defaultValue property="labelpos">lefttop</defaultValue>
		<defaultValue property="textsize">16</defaultValue>
	</initialization>
</component>

</sdkExtension>
